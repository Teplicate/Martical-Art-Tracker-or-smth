            <TextView
                android:id="@+id/redSubmissionPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

        </LinearLayout>

        <Button
            android:id="@+id/roundEndButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/redTilesContainer"
            app:layout_constraintStart_toEndOf="@+id/blueTilesContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>