            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:tag="RED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/screenDivider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06999999">

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redSignigicantStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/sig_str_abbr"
                android:text="@string/sig_strike_button_text"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/tile_text_size"
                tools:text="Sig. Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/str_abbr"
                android:text="@string/strike_button_text"
