            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/blueTilesContainer"
            app:layout_constraintEnd_toStartOf="@+id/blueTilesContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blueTilesContainer">

            <TextView
                android:id="@+id/blueSigStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


            <TextView
                android:id="@+id/blueStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueKnockdownsPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueTakedownAttPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueTakedownPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
