                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
