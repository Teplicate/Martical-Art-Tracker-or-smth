            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redTakedown"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/td_abbr"
                android:text="@string/takedown_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Takedown" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redPasses"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/pass_abbr"
                android:text="@string/passes"
                android:textSize="@dimen/tile_text_size"
                tools:text="Passes" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redReversals"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/rev_abbr"
                android:text="@string/reversals"
                android:textSize="@dimen/tile_text_size"
                tools:text="Reversals" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redSubmissionAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:tag="@string/sub_att_abbr"
                android:text="@string/submission_att_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Submission \n Att." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redPointsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/redTilesContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/redTilesContainer"
            app:layout_constraintTop_toTopOf="@+id/redTilesContainer">

            <TextView
                android:id="@+id/redSigStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


            <TextView
                android:id="@+id/redStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redKnockdownsPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redTakedownAttPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redTakedownPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
