<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.teplicate.martialarttracker.view_models.StatisticViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StatisticFragment">

        <View
            android:id="@+id/screenDivider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#918A8A"
            app:layout_constraintBottom_toBottomOf="@+id/blueTilesContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blueTilesContainer" />

        <LinearLayout
            android:id="@+id/blueTilesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:tag="BLUE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/screenDivider"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06999999">

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueSignigicantStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/sig_str_abbr"
                android:text="@string/sig_strike_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Sig. Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:fontFamily="sans-serif"
                android:tag="@string/str_abbr"
                android:text="@string/strike_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueKnockdowns"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/kd_abbr"
                android:text="@string/knockdowns"
                android:textSize="@dimen/tile_text_size"
                tools:text="Knock -\ndowns" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueTakedownAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="att"
                android:text="@string/takedown_att_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Takedown \n Att." />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueTakedown"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/td_abbr"
                android:text="@string/takedown_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Takedown" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/bluePasses"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/pass_abbr"
                android:text="@string/passes"
                android:textSize="@dimen/tile_text_size"
                tools:text="Passes" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueReversals"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/rev_abbr"
                android:text="@string/reversals"
                android:textSize="@dimen/tile_text_size"
                tools:text="Reversals" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueSubmissionAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:tag="@string/sub_att_abbr"
                android:text="@string/submission_att_button_text"
                android:textSize="@dimen/tile_text_size"
                tools:text="Submission \n Att." />

        </LinearLayout>

        <LinearLayout
