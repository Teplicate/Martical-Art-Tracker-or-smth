<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.teplicate.martialarttracker.view_models.StatisticViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StatisticFragment">

        <View
            android:id="@+id/screenDivider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="32dp"
            android:background="#918A8A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/blueCornerName"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/underline_blue"
            android:text="@string/blueTitle"
            app:layout_constraintEnd_toStartOf="@+id/screenDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Blue Fighter" />

        <TextView
            android:id="@+id/redCornerName"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/underline_red"
            android:text="@string/redTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/screenDivider"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Red Fighter" />

        <LinearLayout
            android:id="@+id/blueTilesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/screenDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blueCornerName">

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueSignigicantStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:text="@string/sig_strike_button_text"
                tools:text="Sig. Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:fontFamily="sans-serif"
                android:text="@string/strike_button_text"
                tools:text="Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueTakedownAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:text="@string/takedown_att_button_text"
                tools:text="Takedown \n Att." />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueTakedown"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:text="@string/takedown_button_text"
                tools:text="Takedown" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/blueSubmissionAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/blue_button_background"
                android:text="@string/submission_att_button_text"
                tools:text="Submission \n Att." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bluePointsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/screenDivider"
            app:layout_constraintStart_toEndOf="@+id/blueTilesContainer"
            app:layout_constraintTop_toTopOf="@+id/blueTilesContainer">

            <TextView
                android:id="@+id/blueSigStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


            <TextView
                android:id="@+id/blueStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueTakedownAttPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueTakedownPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/blueSubmissionPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/redTilesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/screenDivider"
            app:layout_constraintTop_toBottomOf="@+id/redCornerName">

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redSignigicantStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:text="@string/sig_strike_button_text"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                tools:text="Sig. Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redStrike"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:text="@string/strike_button_text"
                android:textSize="15sp"
                tools:text="Strike" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redTakedownAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:text="@string/takedown_att_button_text"
                tools:text="Takedown \n Att." />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redTakedown"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:text="@string/takedown_button_text"
                tools:text="Takedown" />

            <ru.teplicate.martialarttracker.custom_view.SwipeableButton
                android:id="@+id/redSubmissionAttempt"
                style="@style/ButtonTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:background="@drawable/red_button_background"
                android:text="@string/submission_att_button_text"
                tools:text="Submission \n Att." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redPointsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/redTilesContainer"
            app:layout_constraintTop_toTopOf="@+id/redTilesContainer">

            <TextView
                android:id="@+id/redSigStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


            <TextView
                android:id="@+id/redStrikePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redTakedownAttPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redTakedownPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/points_bottom_margin"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />

            <TextView
                android:id="@+id/redSubmissionPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/point_text_size"
                tools:text="7" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>